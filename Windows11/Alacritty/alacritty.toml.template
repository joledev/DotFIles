# ========================================
# üöÄ ALACRITTY CONFIGURACI√ìN PROFESIONAL
# ========================================
# Optimizado para desarrollo y productividad
# Tema: Dark Professional con transparencia elegante

[window]
# Transparencia optimizada para profesionalismo
opacity = 0.88
# Padding mejorado para mejor legibilidad
padding = { x = 20, y = 20 }
# Decoraciones completas pero elegantes
decorations = "full"
# T√≠tulo din√°mico y descriptivo
title = "Alacritty Terminal"
# Iniciar maximizado para aprovechamiento completo
startup_mode = "Maximized"
# Clase de ventana para gestores de ventanas
class = { instance = "Alacritty", general = "Alacritty" }
# Dimensiones optimizadas
dimensions = { columns = 120, lines = 40 }
# Posici√≥n centrada
position = { x = 100, y = 100 }
# Redimensionamiento din√°mico
dynamic_padding = true
# T√≠tulo decorado con informaci√≥n √∫til
dynamic_title = true
# Efectos de blur (requiere compositor compatible)
blur = true

[font]
# ========================================
# üî§ CONFIGURACI√ìN DE FUENTE PROFESIONAL
# ========================================
# FiraCode Nerd Font Mono - Fuente con ligaduras y iconos completos
normal = { family = "FiraCode Nerd Font Mono", style = "Regular" }
bold = { family = "FiraCode Nerd Font Mono", style = "Bold" }
italic = { family = "FiraCode Nerd Font Mono", style = "Light" }
bold_italic = { family = "FiraCode Nerd Font Mono", style = "SemiBold" }

# Tama√±o optimizado para productividad (11pt = balance perfecto)
size = 11.0

# Espaciado fino para mejor legibilidad
offset = { x = 0, y = 2 }

# Configuraciones avanzadas de renderizado
builtin_box_drawing = true

# Configuraciones avanzadas de renderizado optimizadas

[colors]
# ========================================
# üé® ESQUEMA DE COLORES PROFESIONAL
# ========================================
# Tema dark optimizado para largas sesiones de trabajo

[colors.primary]
# Fondo principal con toque c√°lido
background = "#1a1b23"
# Primer plano con contraste √≥ptimo
foreground = "#e6e6e6"
# Texto brillante para resaltados
bright_foreground = "#ffffff"
# Fondo tenue para elementos secundarios
dim_foreground = "#9ca0a4"

# ========================================
# üü° PALETA DE COLORES NORMALES
# ========================================
[colors.normal]
black = "#2c2d3a"
red = "#f85757"        # Rojo vibrante pero no agresivo
green = "#5af78e"      # Verde menta profesional
yellow = "#f9f871"     # Amarillo dorado suave
blue = "#57c7ff"       # Azul cyan brillante
magenta = "#d078ff"    # Magenta suave
cyan = "#4fb3d9"       # Cyan profesional
white = "#f0f0f0"      # Blanco nieve

# ========================================
# ‚ú® PALETA DE COLORES BRILLANTES
# ========================================
[colors.bright]
black = "#686868"      # Gris medio
red = "#ff6b85"        # Rojo coral
green = "#69ff94"      # Verde lima
yellow = "#fffc67"     # Amarillo ne√≥n
blue = "#6ec5ff"       # Azul cielo
magenta = "#d881ff"    # Magenta brillante
cyan = "#60d8ff"       # Cyan brillante
white = "#ffffff"      # Blanco puro

# ========================================
# üìù ELEMENTOS DE INTERFAZ
# ========================================

# Selecci√≥n de texto mejorada
[colors.selection]
background = "#4a4a5e"
text = "#ffffff"

# Cursor con mejor visibilidad
[colors.cursor]
text = "#1a1b23"
cursor = "#f9f871"      # Amarillo para alta visibilidad

# Indicadores de b√∫squeda
[colors.search.matches]
foreground = "#1a1b23"
background = "#f9f871"     # Amarillo para matches

[colors.search.focused_match]
foreground = "#ffffff"
background = "#f85757"     # Rojo para match activo

# Sugerencias y hints
[colors.hints.start]
foreground = "#1a1b23"
background = "#f9f871"

[colors.hints.end]
foreground = "#1a1b23"
background = "#69ff94"

# L√≠nea de n√∫meros (vi mode)
[colors.line_indicator]
foreground = "#9ca0a4"
background = "#2c2d3a"

# Footer de la barra de b√∫squeda
[colors.footer_bar]
foreground = "#e6e6e6"
background = "#2c2d3a"

# ========================================
# üíª CONFIGURACI√ìN DE TERMINAL
# ========================================
[terminal.shell]
program = "pwsh"
args = ["-NoLogo", "-WorkingDirectory", "C:\\Users\\{USERNAME}"]

[terminal]
# Soporte para OSC 52 (clipboard remoto)
osc52 = "CopyPaste"

# ========================================
# üìú CONFIGURACI√ìN DE SCROLLING
# ========================================
[scrolling]
# Historial extenso para desarrollo
history = 50000
# Velocidad de scroll √≥ptima
multiplier = 4

# ========================================
# üîò CONFIGURACI√ìN DE CURSOR
# ========================================
[cursor]
# Cursor prominente con parpadeo suave
style = { shape = "Block", blinking = "On" }
# Cursor en modo vi
vi_mode_style = { shape = "Beam", blinking = "Off" }
# Intervalo de parpadeo optimizado
blink_interval = 500
# Sin timeout (parpadeo continuo)
blink_timeout = 0
# Cursor sin l√≠nea cuando no enfocado
unfocused_hollow = true

# ========================================
# üï∞ CONFIGURACI√ìN DE MOUSE
# ========================================
[mouse]
# Ocultar cursor durante escritura
hide_when_typing = true

# ========================================
# üîç HINTS Y SELECCI√ìN
# ========================================
[hints]
# Configuraci√≥n de hints para URLs
[[hints.enabled]]
regex = '''(https?://|www\.)[^\s<>"{}|\\^`\[\]]+'''
command = "cmd"
post_processing = true
mouse = { enabled = true, mods = "Control" }
binding = { key = "U", mods = "Control|Shift" }

# ========================================
# üîç SELECCI√ìN AVANZADA
# ========================================
[selection]
# Guardado autom√°tico al clipboard
save_to_clipboard = true
# Caracteres sem√°nticos para selecci√≥n de palabras
semantic_escape_chars = ",‚îÇ`|:\"' ()[]{}<>\t"

# ========================================
# ‚å®Ô∏è ATAJOS DE TECLADO AVANZADOS
# ========================================

# --- CLIPBOARD ---
[[keyboard.bindings]]
key = "V"
mods = "Control|Shift"
action = "Paste"

[[keyboard.bindings]]
key = "C"
mods = "Control|Shift"
action = "Copy"

[[keyboard.bindings]]
key = "Insert"
mods = "Shift"
action = "PasteSelection"

# --- ZOOM ---
[[keyboard.bindings]]
key = "Plus"
mods = "Control"
action = "IncreaseFontSize"

[[keyboard.bindings]]
key = "Minus"
mods = "Control"
action = "DecreaseFontSize"

[[keyboard.bindings]]
key = "Key0"
mods = "Control"
action = "ResetFontSize"

# --- VENTANA ---
[[keyboard.bindings]]
key = "F11"
action = "ToggleFullscreen"

[[keyboard.bindings]]
key = "N"
mods = "Control|Shift"
action = "SpawnNewInstance"

[[keyboard.bindings]]
key = "Q"
mods = "Control|Shift"
action = "Quit"

# --- NAVEGACI√ìN ---
[[keyboard.bindings]]
key = "PageUp"
mods = "Shift"
action = "ScrollPageUp"

[[keyboard.bindings]]
key = "PageDown"
mods = "Shift"
action = "ScrollPageDown"

[[keyboard.bindings]]
key = "Home"
mods = "Shift"
action = "ScrollToTop"

[[keyboard.bindings]]
key = "End"
mods = "Shift"
action = "ScrollToBottom"

# --- B√öSQUEDA ---
[[keyboard.bindings]]
key = "F"
mods = "Control|Shift"
action = "SearchForward"

[[keyboard.bindings]]
key = "B"
mods = "Control|Shift"
action = "SearchBackward"

# --- VI MODE ---
[[keyboard.bindings]]
key = "Space"
mods = "Control|Shift"
action = "ToggleViMode"

# ========================================
# üîò MOUSE BINDINGS AVANZADOS
# ========================================

# Pegar con clic derecho
[[mouse.bindings]]
mouse = "Right"
action = "PasteSelection"

# Mouse bindings adicionales para mejor experiencia
# (Configuraciones espec√≠ficas de scroll se manejan autom√°ticamente)

# ========================================
# üöÄ CONFIGURACIONES DE RENDIMIENTO
# ========================================
[env]
# Variables de entorno para mejor rendimiento
TERM = "alacritty"
WINIT_X11_SCALE_FACTOR = "1.0"
# Variables para optimizar blur y transparencia
WINIT_HIDPI_FACTOR = "1.0"
WINIT_UNIX_BACKEND = "x11"
# Habilitar blur a nivel de sistema
KDE_SESSION_VERSION = "5"
GNOME_DESKTOP_SESSION_ID = "this-is-deprecated"

# Configuraci√≥n final optimizada
[debug]
# Log level para troubleshooting (cambiar a 'Off' en producci√≥n)
log_level = "Warn"
# No renderizar cuando no es necesario
render_timer = false
# Imprimir todos los eventos recibidos
print_events = false

